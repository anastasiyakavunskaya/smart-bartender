<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <Spinner
        android:id="@+id/setting_1"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_gravity="center" />

    <Spinner
        android:id="@+id/setting_2"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_gravity="center"/>

    <Spinner
        android:id="@+id/setting_3"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_gravity="center"/>

    <Spinner
        android:id="@+id/setting_4"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_gravity="center"/>

    <Spinner
        android:id="@+id/setting_5"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_gravity="center"/>


    <Spinner
        android:id="@+id/setting_6"
        android:layout_width="250dp"
        android:layout_height="32dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_coefficient"
        android:textSize="@dimen/settings_text_size"
        android:layout_margin="@dimen/margin"

        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_coefficient"
        android:autofillHints="100"
        android:layout_margin="@dimen/margin"
        android:textSize="@dimen/settings_text_size"
        android:inputType="numberDecimal"
        tools:ignore="LabelFor"
        tools:targetApi="o" />

</LinearLayout>